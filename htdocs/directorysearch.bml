<!--- location --->
<?crit
name=>By Location
code=>s_loc
form<=
<?_code
{
    my $w = LJ::Widget::GeoSearchLocation->new;
    my $ret = '';
    $ret .= "<style> .field_class {text-align: right;} </style>\n";
    $ret .= $w->render(
        country => '',
        state => '',
        city => '',
    );
    return $ret;
}
