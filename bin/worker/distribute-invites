use strict;
use warnings;

use lib "$ENV{LJHOME}/cgi-bin";
use LJ::Worker::TheSchwartz;
use DW::Worker::DistributeInvites;

schwartz_decl( $_ )
    foreach (DW::Worker::DistributeInvites->schwartz_capabilities);

schwartz_work(); # Never returns.
