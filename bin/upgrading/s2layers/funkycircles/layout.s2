.icons-container .inner {
    margin: 0;
    padding: 2em;
    }

.icons-container ul {
    margin: 0;
    padding: 0;
    }

    .icons-container ul li {
        display: inline;
        }

.icons-container .sorting-options {
    text-align: center;
    }

.icons-container .pages {
    text-align: right;
    }

    .icons-container .pages b {
        font-weight: normal;
