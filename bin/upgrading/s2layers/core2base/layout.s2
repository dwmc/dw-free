.two-columns-left #tertiary { margin-left: -$*sidebar_width; }
.two-columns-right #tertiary { margin-right: -$*sidebar_width; }
.two-columns-left #tertiary .module,
.two-columns-right #tertiary .module {
    float: left;
    width: $*sidebar_width;
}
.three-columns-left #tertiary { 
