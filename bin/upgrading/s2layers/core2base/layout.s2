	width: $*sidebar_width;
	margin-left: -$*sidebar_width; 
}
.three-columns-right #tertiary {
	float: right;
	width: $*sidebar_width;
	margin-right: -$*sidebar_width_doubled;
}
.three-columns-sides #tertiary { 
	float: right;
	width: $*sidebar_width;
	margin-right: -$*sidebar_width; 
}

